<Window x:Class="TableTransferApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TableTransferApp"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <TextBox x:Name="txtSourceDatabase" HorizontalAlignment="Left" Height="25" Margin="91,91,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="100"/>
        <TextBox x:Name="txtSourceTable" HorizontalAlignment="Left" Height="25" Margin="91,160,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="100"/>
        <TextBox x:Name="txtSourceConnectionString" HorizontalAlignment="Left" Height="25" Margin="91,235,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="100"/>

        <TextBox x:Name="txtDestDatabase" HorizontalAlignment="Left" Height="25" Margin="330,91,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="100"/>
        <TextBox x:Name="txtDestTable" HorizontalAlignment="Left" Height="25" Margin="330,160,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="100"/>
        <TextBox x:Name="txtDestConnectionString" HorizontalAlignment="Left" Height="25" Margin="330,235,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="100"/>

        <Label Content="Source Database Name" HorizontalAlignment="Left" Height="25" Margin="91,61,0,0" VerticalAlignment="Top" Width="136"/>
        <Label Content="Source Table Name" HorizontalAlignment="Left" Margin="91,129,0,0" VerticalAlignment="Top" Width="123"/>
        <Label Content="Source Database Connection String" HorizontalAlignment="Left" Margin="91,0,0,0" VerticalAlignment="Center" Width="199"/>
        <Label Content="Destination Database Name" HorizontalAlignment="Left" Height="25" Margin="330,61,0,0" VerticalAlignment="Top" Width="163" RenderTransformOrigin="0.5,0.5"/>
        <Label Content="Destination Table Name" HorizontalAlignment="Center" Margin="0,129,0,0" VerticalAlignment="Top" Width="142"/>
        <Label Content="Destination Database Connection String" HorizontalAlignment="Left" Margin="330,0,0,0" VerticalAlignment="Center" Width="226"/>

        <TextBlock x:Name="errMsg" HorizontalAlignment="Left" Margin="380,314,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Height="92" Width="392"/>

        <Button x:Name="execTransferBtn" Content="Execute Transfer" HorizontalAlignment="Left" Margin="190,314,0,0" VerticalAlignment="Top" Height="42" Width="150" Click="execTransferBtn_Click"/>
    </Grid>
</Window>
